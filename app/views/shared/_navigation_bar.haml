:ruby
  profile_path = patient_profile_path if current_user.patient.present?
  profile_path = doctor_profile_path if current_user.doctor.present?
  
:coffee
  $ ->
    $('.company-logo').on 'click', ->
      window.location.href = '/'

%nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.ml-auto.mt-2.mt-lg-0
      %li.nav-item.active
        = link_to 'Home', root_path, class: 'nav-link'

      - if current_user
        .dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true",
           "data-toggle" => "dropdown", href: "#", role: "button"}
            %img.avatar{src: "#{gravatar_url(current_user)}"}
            = current_user.username
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdown"}
            = link_to 'Profile', profile_path, class: 'dropdown-item'
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item'