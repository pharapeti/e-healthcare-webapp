= form_for @question, url: patient_questions_path do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :media
    = f.file_field :media
  .field
    = f.label :directed_to_id
    = f.text_field :directed_to_id
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Submit question', class: 'btn-primary'
