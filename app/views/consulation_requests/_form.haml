= bootstrap_form_for @consulation_request, url: patient_consulation_requests_path do |f|
  - if @consulation_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@consulation_request.errors.count, "error")} prohibited this consulation_request from being saved:"
      %ul
        - @consulation_request.errors.full_messages.each do |message|
          %li= message

  .field
    = f.text_area :description
  .field
    = f.text_field :directed_to
  .field
    = f.datetime_select :scheduled_for
  .actions
    = link_to 'Back', patient_consulation_requests_path, class: 'btn btn-danger'
    = f.submit 'Save', class: 'btn btn-success'
